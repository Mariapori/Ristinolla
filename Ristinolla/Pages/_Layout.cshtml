@using Microsoft.AspNetCore.Components.Web
@namespace Ristinolla.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="fi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Ristinolla.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    @RenderBody()

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            Ei yhteyttä SignalR kanssa. Kokeile päivittää sivu.
        </environment>
        <environment include="Development">
            Virhe havaittu!
        </environment>
        <a href="" class="reload">Lataa sivu uudelleen</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
        © Topias Mariapori, 2022-@DateTime.Now.Year
    </div>
</body>
</html>
